<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="RagnarosWarner.lua"/>
	<GameTooltip name="RagnarosWarnerTooltip" inherits="GameTooltipTemplate" parent="UIParent" hidden="true"></GameTooltip>
	<GameTooltip name="RagnarosWarnerStomachTooltip" inherits="GameTooltipTemplate" parent="UIParent" hidden="true"></GameTooltip>
	<Frame name="RagnarosWarnerFrame" movable="true" toplevel="true" parent="UIParent" hidden="true">
		<Size>
			<AbsDimension x="16" y="16" />
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="RagnarosWarnerStatusTexture" file="Interface\AddOns\RagnarosWarner\RagnarosWarner-Status"/>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				RagnarosWarner_OnLoad();
				this:RegisterForDrag("LeftButton");
				this:EnableMouse(1);
			</OnLoad>
			<OnEvent>
				RagnarosWarner_OnEvent(event);
			</OnEvent>
			<OnUpdate>
				RagnarosWarner_OnUpdate(arg1)
			</OnUpdate>
			<OnDragStart>
				if(RagnarosWarnerStatus_Locked == 0) then
					this:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>
